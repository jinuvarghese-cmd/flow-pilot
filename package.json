{
  "name": "flow-pilot",
  "version": "0.0.0",
  "private": true,
  "description": "Enterprise-grade multi-tenant SaaS workflow automation platform",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "prisma:generate:all": "pnpm exec prisma generate --schema=apps/api/prisma/schema.prisma && pnpm --filter web exec prisma generate --schema=../api/prisma/schema.prisma"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.4",
    "@types/node": "^24.0.13",
    "prettier": "^3.1.1",
    "prisma": "^6.12.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@prisma/client": "^6.12.0"
  }
}